<main>
    <div class="container">

        <section class="details">
            <h1>Theater title: {{currentPlay.title}}</h1>
            <div>
                <img src="{{currentPlay.imageUrl}}" />
            </div>
        </section>

        <section class="details">
            <h3>Theater Description</h3>
            <p>{{currentPlay.description}}</p>
            <div class="buttons">
                {{#if isCreator}}
                <a class="btn delete" href="/delete">Delete</a>
                <a class="btn edit" href="/editDetails">Edit</a>
                {{else}}
                {{#if isLiked}}
                <span class="liked">You have already liked this play!</span>
                {{else}}
                <a class="btn like" href="/like/{{currentPlay._id}}">Like</a>
                {{/if}}
                {{/if}}
            </div>
        </section>
    </div>
</main>